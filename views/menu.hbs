<div class="container">
  <h1>Menu</h1>
  {{#if error}}
  <p class="error">{{error}}</p>
  {{/if}}
  {{#if success}}
  <p class="success">{{success}}</p>
  {{/if}}
  <div class="menu-grid">
    {{#each foods}}
    <div class="menu-card">
      {{#if this.image}}
      <img src="{{this.image}}" alt="{{this.name}}">
      {{/if}}
      <h3>{{this.name}}</h3>
      <p>{{this.description}}</p>
      <p><strong>Price:</strong> ${{this.price}}</p>
      {{#if ../session.userId}}
      <form action="/orders" method="POST">
        <input type="hidden" name="foodId" value="{{this._id}}">
        <div class="form-group">
          <label for="quantity-{{this._id}}">Quantity:</label>
          <input type="number" id="quantity-{{this._id}}" name="quantity" min="1" value="1" required>
        </div>
        <button type="submit" class="btn">Place Order</button>
      </form>
      {{/if}}
    </div>
    {{/each}}
  </div>
</div>